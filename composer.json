{
  "name": "tuzex/ddd",
  "description": "A lightweight library for Domain Driven Design (DDD) project in PHP",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Edo Barnas",
      "email": "iam@edobarnas.com"
    }
  ],
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/package-versions-deprecated": true
    }
  },
  "autoload": {
    "psr-4": {
      "Tuzex\\Ddd\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tuzex\\Ddd\\Test\\": "tests/"
    }
  },
  "require": {
    "php": "^8.1",
    "doctrine/dbal": "3.3.*",
    "doctrine/orm": "2.12.*",
    "symfony/uid": "^6.0",
    "tuzex/timekeeper": "0.1.*",
    "webmozart/assert": "1.10.*"
  },
  "require-dev": {
    "phpstan/phpstan": "1.6.*",
    "phpstan/phpstan-phpunit": "1.1.*",
    "phpunit/phpunit": "9.5.*",
    "symplify/easy-coding-standard": "10.2.*"
  }
}
