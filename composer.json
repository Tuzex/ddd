{
  "name": "tuzex/ddd",
  "description": "A lightweight library for DDD (Domain Driven Design) project in PHP",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Edo Barnas",
      "email": "iam@edobarnas.com"
    }
  ],
  "config": {
    "platform": {
      "php": "8.1",
      "ext-intl": "1"
    },
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Tuzex\\Ddd\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tuzex\\Ddd\\Test\\": "tests/"
    }
  },
  "require": {
    "php": "^8.1",
    "doctrine/dbal": "2.12.*|3.*",
    "tuzex/timekeeper": "0.1.*",
    "webmozart/assert": "1.10.*"
  },
  "require-dev": {
    "phpstan/phpstan": "1.3.*",
    "phpstan/phpstan-phpunit": "1.0.*",
    "phpunit/phpunit": "9.5.*",
    "symplify/easy-coding-standard": "10.0.*"
  }
}
