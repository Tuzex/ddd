{
  "name": "tuzex/ddd",
  "description": "A lightweight library for DDD (Domain Driven Design) project in PHP",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Edo Barnas",
      "email": "iam@edobarnas.com"
    }
  ],
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Tuzex\\Ddd\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tuzex\\Ddd\\Test\\": "tests/"
    }
  },
  "require": {
    "php": "8.*",
    "doctrine/dbal": "2.12.*|3.*",
    "symfony/messenger": "4.3.*|4.4.*|5.*",
    "tuzex/timekeeper": "0.1.*",
    "webmozart/assert": "1.10.*"
  },
  "require-dev": {
    "phpstan/phpstan": "0.12.*",
    "phpstan/phpstan-phpunit": "0.12.*",
    "phpunit/phpunit": "9.5.*",
    "symplify/easy-coding-standard": "9.3.*"
  }
}
